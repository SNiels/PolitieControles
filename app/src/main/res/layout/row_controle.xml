<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout

    android:id="@+id/root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">
    <TextView
        android:focusable="false"
        android:clickable="false"
        android:textAllCaps="true"
        android:paddingBottom="8dp"
        style="@android:style/TextAppearance.Large"
        android:text="straat"
        android:id="@+id/straat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:visibility="invisible"
        android:focusable="false"
        android:clickable="false"
        android:capitalize="words"
        style="@android:style/TextAppearance.Small"
        android:text="maand"
        android:id="@+id/maand"
        android:layout_below="@id/straat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:focusable="false"
        android:clickable="false"
        android:layout_alignBottom="@id/maand"
        android:layout_alignParentRight="true"
        style="@android:style/TextAppearance.Small"
        android:text="@string/aantal_controles"
        android:id="@+id/aantal_controles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_below="@id/straat"
        android:focusable="false"
        android:clickable="false"
        style="@android:style/TextAppearance.Small"
        android:text="@string/aantal_overtredingen"
        android:id="@+id/aantal_overtredingen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>